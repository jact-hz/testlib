<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CAD_AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextAppearance">@style/CAD_MenuTextStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CAD_MenuTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cad_count_contain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="cad_count_text_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="cad_count_text_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cad_bottom_op_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/cad_op_font_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cad_cell_lv_item_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cad_iv_roaming_direction">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="cad_cell_list_item_small">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:background">@drawable/cad_op_touch_bg</item>
    </style>

    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="btn_flow">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginRight">@dimen/standard_23</item>
        <item name="android:padding">@dimen/standard_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="btn_graffiti_flow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_marginBottom">106dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

</resources>